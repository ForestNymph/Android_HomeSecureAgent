<resources>

    <!--https://developer.android.com/intl/zh-CN/training/basics/actionbar/styling.html-->
    <!--
        https://chromium.googlesource.com/android_tools/+/master/sdk/extras/android/support/v7/appcompat/res/
    -->

    <!-- Base application theme. -->
    <style name="CustomAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:icon">@drawable/icon_orange</item>
        <item name="android:alertDialogStyle">@style/MyDialogTheme</item>
        <item name="android:typeface">monospace</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="alertDialogStyle">@style/MyDialogTheme</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:background">@drawable/grey</item>

        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/grey</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <!-- <item name="android:textColor">#FFA500</item>-->
        <item name="android:textColor">#f2efe3</item>
        <item name="android:textStyle">bold</item>

        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <style name="MyDialogTheme" parent="@style/Theme.AppCompat.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#FFA500</item>
        <!-- Used for the title and text -->
        <!--        <item name="android:textColorPrimary">#f2efe3</item>-->
        <!-- Used for the background -->
        <item name="android:background">#29343c</item>
        <!-- Used for the list element only -->
        <item name="textColorAlertDialogListItem">#f2efe3</item>
        <!--    <item name="android:textStyle">bold</item>-->
        <item name="android:textSize">18dp</item>

        <item name="android:windowTitleStyle">@style/MyTitleTextStyle</item>
    </style>

    <style name="MyTitleTextStyle">
        <item name="android:textColor">#FFA500</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>


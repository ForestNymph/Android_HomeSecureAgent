<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#747258"
    android:orientation="horizontal"
    android:padding="10dp">

    <!-- Sensor image -->
    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:padding="3dp">

        <ImageView
            android:id="@+id/imageview_sensorimage"
            android:layout_width="20dip"
            android:layout_height="20dip" />
    </LinearLayout>

    <!-- Sensor name -->
    <TextView
        android:id="@+id/textview_sensorname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#282828"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Sensor value -->
    <TextView
        android:id="@+id/textview_sensorvalue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#232630"
        android:textSize="18sp" />

    <!-- Sensor Status -->
    <TextView
        android:id="@+id/textview_sensorstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dip"
        android:gravity="end"
        android:textColor="#f2efe3"
        android:textSize="20sp"
        android:textStyle="normal" />
</LinearLayout>